@model Meet.Models.Car

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>About The Car</h1>

<div class="media">
    <img src="@Model.ImageLocation" class="mr-3" alt="..." id="CarImage">
    <style type="text/css">
        #CarImage {
            max-width: 50%;
            height: auto;
            padding-bottom: 5px;
        }
    </style>
    <div class="media-body">
        <h5 class="mt-0">@Model.Year @Model.Make @Model.Model</h5>
        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vin)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vin)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Make)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Make)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Model)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Model)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Year)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Year)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Mileage)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Mileage)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Mods)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Mods)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AvgRating)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AvgRating)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div>
    <a type="button" asp-action="CarRate" asp-route-id="@Model.CarId" asp-controller="Cars" class="btn btn-primary">Rate The Car</a>
    <a type="button" asp-action="Index" asp-controller="CarMeets" class="btn btn-primary">Go To The Meets</a>
</div>
