@model Meet.Models.CarMeet

@{
    ViewData["Title"] = "Edit this Meet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit this Meet</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MeetName" class="control-label"></label>
                <input asp-for="MeetName" class="form-control" />
                <span asp-validation-for="MeetName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" MaxLength="2" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip" class="control-label"></label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetTime" class="control-label"></label>
                <input asp-for="MeetTime" class="form-control" />
                <span asp-validation-for="MeetTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetDate" class="control-label"></label>
                <input asp-for="MeetDate" class="form-control" />
                <span asp-validation-for="MeetDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
